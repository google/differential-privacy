# keep
go_binary(
    name = "examples_main",
    srcs = [
        "main.go",
    ],
    data = [
        "//:data/day_data.csv",
        "//:data/outliers_week_data.csv",
        "//:data/week_data.csv",
    ],
    importpath = "github.com/google/differential-privacy/examples/go/examples_main",
    visibility = ["//visibility:public"],
    deps = [
        "//:go_default_library",
        "@com_github_golang_glog//:go_default_library",
    ],
)
